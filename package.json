{
  "name": "photo-library",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production --base-href=/xm-task/",
    "watch": "ng build --watch --configuration development",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "nx run-many -t lint",
    "storybook": "nx run photo-library:storybook",
    "build-storybook": "nx run photo-library:storybook-build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,html}": [
      "npm run test:ci"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.14",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@ngrx/signals": "^20.1.0",
    "@nx/jest": "^22.1.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.12",
    "@angular-devkit/core": "^20.3.12",
    "@angular-devkit/schematics": "^20.3.12",
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@chromatic-com/storybook": "^4.1.3",
    "@nx/angular": "^22.1.2",
    "@nx/storybook": "^22.1.2",
    "@nx/workspace": "^22.1.2",
    "@storybook/angular": "^10.0.8",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^15.0.3",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.7",
    "nx": "^22.1.2",
    "typescript": "~5.9.2"
  }
}
